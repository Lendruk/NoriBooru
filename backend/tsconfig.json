{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"outDir": "./dist",
		"lib": ["ESNext"],
		"types": ["reflect-metadata"],
		"rootDirs": ["./", "../types"],
	},
	"exclude": ["./master.drizzle.config.ts", "./vault.drizzle.config.ts", "node_modules", "vaults"]
}
