		"better-sqlite3": "^11.10.0",
		"drizzle-orm": "^0.43.1",
		"exifreader": "^4.23.1",
		"fastify": "^5.3.2",
		"fluent-ffmpeg": "^2.1.3",
		"inversify": "^7.5.1",
		"node-html-parser": "^6.1.13",
		"reflect-metadata": "^0.2.2",
		"sharp": "^0.34.1",
		"tree-kill": "^1.2.2",
		"zod": "^3.24.2"
	},
	"bundleDependencies": [
		"@fastify/multipart",
		"@fastify/cors",
