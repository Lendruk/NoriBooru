{
	"name": "@nori-booru/backend",
	"version": "0.7.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"generate:drizzle:master": "drizzle-kit generate --config=./master.drizzle.config.ts",
		"generate:drizzle:vault": "drizzle-kit generate --config=./vault.drizzle.config.ts",
		"generate:drizzle": "npm run generate:drizzle:master && npm run generate:drizzle:vault",
		"drizzle:drop:migration": "drizzle-kit drop --config=./vault.drizzle.config.ts",
		"build": "rm -rf dist && node ./config.esbuild.mjs",
		"build:tsc": "rm -rf dist && tsc",
		"dev": "nodemon ./src/main.ts --config nodemon.json | pino-pretty",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"bump:patch": "npm version patch --git-tag-version false",
		"bump:minor": "npm version minor --git-tag-version false",
		"bump:major": "npm version major --git-tag-version false"
	},
	"keywords": [],
	"author": "Lendruk",
	"license": "MIT",
